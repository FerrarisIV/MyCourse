<h1>Catalogo dei corsi</h1>

@for (int i = 1; i <= 10; i++)
{
    <div class="row">
        <div class="col-md-1">
            <img src="~/logo.png" width="50px">
        </div>
        <div class="col-md-5">
            <h2>Titolo del corso @i</h2>
            <author>nome del poeta</author>
        </div>
        <div class="col-md-2 rating">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
        </div>
        <div class="col-md-2 price">
            EUR 10,99<br>
            <s>EUR 12,99</s>
        </div>
        <div class="col-md-2 d-flex align-items-center">
            <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="5">Dettaglio corso 5</a>
        </div>
    </div>
}