@model IPaginationInfo
@{
    int TotalPages = (int) Math.Ceiling(Model.TotalResults / (decimal) Model.ResultsPerPage);
    int CurrrentPage = Model.CurrentPage;
}
<nav aria-label="Page navigation example">
    <ul class="pagination d-flex justify-content-center mt-3">        


        @if(CurrrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-route-page="1" asp-route-search="@Model.Search" asp-route-orderby="@Model.OrderBy" asp-route-ascending="@Model.Ascending"><i class="fas fa-angle-double-left"></i></a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-route-page="@(CurrrentPage-1)" asp-route-search="@Model.Search" asp-route-orderby="@Model.OrderBy" asp-route-ascending="@Model.Ascending"><i class="fas fa-angle-left"></i></a>
            </li>
            <p>&nbsp;&nbsp;&nbsp;</p>
        }

        @for(int p = Math.Max(1, CurrrentPage-4); p <= Math.Min(TotalPages, CurrrentPage+4); p++)
        {
            if (p == CurrrentPage)
            {
                <li class="page-item active" aria-current="page">
                    <a class="page-link" asp-route-page="@p" asp-route-search="@Model.Search" asp-route-orderby="@Model.OrderBy" asp-route-ascending="@Model.Ascending">@p<span class="sr-only">(current)</span></a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@p" asp-route-search="@Model.Search" asp-route-orderby="@Model.OrderBy" asp-route-ascending="@Model.Ascending">@p</a>
                </li>
            }
        }

        @if(CurrrentPage < TotalPages)
        {
            <p>&nbsp;&nbsp;&nbsp;</p>
            <li class="page-item">
                <a class="page-link" asp-route-page="@(CurrrentPage+1)" asp-route-search="@Model.Search" asp-route-orderby="@Model.OrderBy" asp-route-ascending="@Model.Ascending"><i class="fas fa-angle-right"></i></a>
            </li>
            <li class="page-item">
                <a class="page-link" asp-route-page="@TotalPages" asp-route-search="@Model.Search" asp-route-orderby="@Model.OrderBy" asp-route-ascending="@Model.Ascending"><i class="fas fa-angle-double-right"></i></a>
            </li>
        }
                
    </ul>
</nav>